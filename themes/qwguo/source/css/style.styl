// ::-webkit-scrollbar 滚动条整体部分，可以设置宽度等
// ::-webkit-scrollbar-button 滚动条两端的按钮
// ::-webkit-scrollbar-track  外层轨道
// ::-webkit-scrollbar-track-piece  内层滚动槽
// ::-webkit-scrollbar-thumb 滚动的滑块
// ::-webkit-scrollbar-corner 边角
// ::-webkit-resizer 定义右下角拖动块的样式
::-webkit-scrollbar
  width 6px
  height 6px
  background-color lighten(main-color, 20%)
::-webkit-scrollbar-thumb
  radius(4px)
  background-color lighten(main-color, 30%)
::-webkit-scrollbar-button
  width 6px
  height 6px
  radius(4px)
  background-color lighten(main-color, 40%)
::-webkit-scrollbar-corner
  background-color lighten(main-color, 50%)
  radius(4px)

html
  scrollbar-width thin
  scrollbar-color lighten(main-color, 30%) lighten(main-color, 20%)
  scrollbar-base-color lighten(main-color, 30%);
  //scrollbar-base-color lighten(main-color, 30%);
  scrollbar-3dlight-color lighten(main-color, 30%);
  scrollbar-highlight-color lighten(main-color, 30%);
  scrollbar-track-color lighten(main-color, 20%)
  scrollbar-arrow-color lighten(main-color, 20%)
  scrollbar-shadow-colorlighten(main-color, 20%)
  //scrollbar-dark-shadow-color lighten(main-color, 20%)

*
  box-sizing border-box
html,body
  min-height 100%
  height 100%
  scroll-behavior smooth
.q::after
  content ''
  display table
  clear both
body
  padding 0
  margin 0
  background-color lighten(main-color, 10%)
  color font-color
  font-family PingFang SC, Hiragino Sans GB, Microsoft Yahei, WenQuanYi Micro Hei, sans-serif
a
  color link-color
  text-decoration none
  &:hover
    text-decoration none
    color lighten(link-color, 20%)


