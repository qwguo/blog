@import "mixins"
@import "variables"
// ::-webkit-scrollbar 滚动条整体部分，可以设置宽度等
// ::-webkit-scrollbar-button 滚动条两端的按钮
// ::-webkit-scrollbar-track  外层轨道
// ::-webkit-scrollbar-track-piece  内层滚动槽
// ::-webkit-scrollbar-thumb 滚动的滑块
// ::-webkit-scrollbar-corner 边角
// ::-webkit-resizer 定义右下角拖动块的样式
::-webkit-scrollbar
  width 6px
  background-color lighten(main-color, 20%)
::-webkit-scrollbar-thumb
  border-radius 4px
  background-color lighten(main-color, 30%)
::-webkit-scrollbar-button
  height 6px

*
  box-sizing border-box
html,body
  min-height 100%
  height 100%
  scroll-behavior smooth
.q::after
  content ''
  display table
  clear both
body
  padding 0
  margin 0
  background-color lighten(main-color, 10%)
  color font-color
  font-family PingFang SC, Hiragino Sans GB, Microsoft Yahei, WenQuanYi Micro Hei, sans-serif
a
  color link-color
  text-decoration none
  &:hover
    text-decoration none
    color lighten(link-color, 20%)

#backTopBtn
  width 40px
  height 40px
  border-radius 50%
  box-shadow inset 0 0 30px lighten(main-color, 30%)
  position fixed
  right 30px
  bottom 30px
  z-index 10
  overflow hidden
  cursor pointer
  opacity 0
  transform(scale(0))
  transition(all .2s linear)
  &.show
    transform(scale(1))
    opacity 1
  i
    height 30%
    position absolute
    z-index 2
    left 0
    right 0
    bottom 0
    height 0
    transition(all .2s linear)
    &::after,&::before
      content ''
      position absolute
      width 80px
      height 80px
      border-radius 40%
      top 0
      left 50%
      background-image linear-gradient(#0052d4, #0ed2f7)
      transform(translate(-50%,-5%) rotate(0deg))
    &::before
      opacity .9
      animation rotates 6s linear -5s infinite
      z-index 2
    &::after
      z-index 1
      opacity .4
      animation rotates 6s linear infinite
  span
    position absolute
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    font-size 12px
    color #fff
    z-index 3
    em
      font-style normal
      display none
    &:hover
      b
        display none
      em
        display block



