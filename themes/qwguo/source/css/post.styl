.article-main
  .icon-home,
  .article-doc-switch
    position fixed
    width 40px
    height 40px
    margin-left -42px
    border-radius 0 10px 10px 0
    background-color lighten(main-color, 25%)
    cursor pointer
  .icon-home
    font-size 20px
    color #fff
    top 30px
    text-align center
    padding 8px 6px
  .article-doc-switch
    padding 4px 6px
    top 80px
    font-size 0
    i
      transition(all .2s linear)
      display block
      height 4px
      background-color #fff
      margin 5px 0 0
      border-radius 2px
      &::before
        content ''
        display inline-block
        height 100%
        width 2px
        margin-left 4px
        background-color  lighten(main-color, 25%)
    &.open
      i
        &::before
          opacity 0
        &:nth-child(1)
          transform(translateY(9px) rotate(45deg))
        &:nth-child(2)
          opacity 0
        &:nth-child(3)
          transform(translateY(-9px) rotate(-45deg))
  .article-doc
    position fixed
    z-index 100
    left 250px
    top 0
    bottom 0
    width 0
    background-color lighten(main-color, 15%)
    overflow hidden
    opacity 0
    transition(all .2s linear)
    ol
      padding 10px 0 10px 10px
      li
        padding 5px 0
        list-style none
        white-space nowrap
        .toc-number
          display none
    .toc-level-1
      > a
        font-size 16px
    .toc-level-2
      > a
        font-size 14px
    &.open
      left 0
      width 250px
      overflow auto
      opacity 1

.article-main
  padding .5em 20px
  .article-box
    position relative
  .article-tags
    position absolute
    z-index 2
    right 0
    top 0
    text-align right
    color darken(font-color, 70%)
    transition(all .3s linear)
    &:hover
      color darken(font-color, 50%)
/* #################### 文章 #################### */
.article-box
  line-height 2
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    line-height 1.5
    margin .5em 0
  h1
    font-size 3.2em
    border-bottom 1px solid lighten(main-color, 30%)
  h2
    font-size 2.2em
  h3
    font-size 1.8em
  h4
    font-size 1.5em
  h5
    font-size 1.2em
  h6
    font-size 1em
  blockquote
    background-color lighten(main-color, 15%)
    padding 6px 12px
    margin 5px 0
    font-size 14px
    border-left 10px solid lighten(main-color, 25%)
  code
    color #D7BA7D
    padding 3px 5px 5px
    background-image linear-gradient(80deg, lighten(main-color, 35%), lighten(main-color, 25%))
    border-radius 5px
    margin 0 .2em
  code.hljs
    color #ebdbb2
    display block
    overflow-x auto
    padding 0.5em
    background-color #282828
  pre
    line-height 1.8
    font-size 18px
    position relative
    .code-lang
      position absolute
      color #0ed2f7
      text-transform uppercase
      left 2em
      top 1em
      z-index 100
      padding 2px 5px
      border-radius 3px
      background-color main-color
      font-size 14px
  .CodeMirror
    border-radius 10px
    font-family inherit
    height auto
    .CodeMirror-scroll
      height auto
      padding 55px 30px 60px 10px
      /* overflow-y hidden
      overflow-x auto */
    .CodeMirror-gutters
      padding 0 10px 0 20px
      background-color main-color!important
  a
    color #d7ba7d
  dl,
  ol,
  ul
    margin 12px 0;
    padding: .5em 1em .5em 2em;
    line-height: 1.5;
  li,
  dd
    padding: .5em 0;
  img
    max-width 100%
    border-radius 5px
    display inline-block
    margin .5em 0
  strong,
  dfn
    font-weight: 700;
  em,
  dfn
    font-style: italic;
    font-weight: 400;
  del
    text-decoration: line-through;
  table
    width 100%
    border 0
    margin 20px 0 50px 0
    border-collapse collapse
    border-spacing 0
    line-height 35px
    border 1px solid lighten(main-color, 25%)
    th
      background-color lighten(main-color, 25%)
      font-weight 700
      font-size 18px
      text-align left
      line-height 35px
      color #FFF
      font-size 16px
    td,
    th
      padding 5px 20px 5px 20px
      font-size 14px
      border 1px solid lighten(main-color, 25%)


