/* #################### 文章 #################### */
/* 作者 时间 相关 */
#post-author {
    font-size: 9px;
    position: absolute;
    top: 60px;
    right: 30px;
    color: #999;
}

#post-date {
    font-size: 9px;
    position: absolute;
    top: 80px;
    right: 30px;
    color: #999;
}

/* 文章各个元素间隔 */
#article {
    padding: 30px;
}
#article * {
    margin: 30px 0;
}


#article h1,
#article h2,
#article h3,
#article h4,
#article h5,
#article h6 {
    line-height: 40px;
    margin: 20px 0 15px;
}


#article h1 {
    font-size: 32px;
    font-weight: 900;
    padding-bottom: 10px;
    border-bottom: 2px solid #e06c75;
}

#article h2 {
    font-size: 25px;
    border-left: 3px solid #73b1e0;
    padding-left: 10px;
}

#article h3 {
    font-size: 22px
}

#article a {
    color: #e06c75;
    text-decoration: none;
}

#article a:hover {
    border-bottom: 1px solid;
}

#article h1 a:hover{
    border-bottom: none;
}

#article code {
    border-radius: 3px;
    box-shadow: 0px 0px 5px #999;
}

#article img {
    max-width: 100%;
    height: auto;
    border-radius: 5px;
    box-shadow: 0px 0px 8px #999;
}

#article pre {
    font-size: 14px;
    margin: 20px 0 15px;
}

#article p {
    margin: 0 0 10px;
    line-height: 30px
}

/* 表格处理 */
#article table {
  width: 100%;
  border: 0;
  margin: 20px 0 50px 0;
  border-collapse: collapse;
  border-spacing: 0;
  line-height: 35px;
  border-radius: 8px;
  box-shadow: 0px 0px 5px #999;
}

#article table th {
  background: #73b1e0;
  font-weight: 800;
  font-size: 18px;
  text-align: left;
  line-height: 35px;
  color: #FFF;
}

#article table tr:nth-child(odd) {
  background: #F4F4F4;
}

#article table tr:hover,
#article table td:hover {
  background: #badbf5;
  color: #FFF;
}

#article table td, table th {
  padding: 5px 20px 5px 20px
}

#article table tr:first-child th:first-child {
  border-top-left-radius: 3px;
}

#article table tr:first-child th:last-child {
  border-top-right-radius: 3px;
}

#article table tr:last-child td:first-child {
  border-bottom-left-radius: 3px;
}

#article table tr:last-child td:last-child {
  border-bottom-right-radius: 3px;
}

/* #################### 文章 #################### */

.article-box
  line-height 2
  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    line-height 1.5
    margin .5em 0
  h1
    font-size 3.2em
    border-bottom 1px solid lighten(main-color, 30%)
  h2
    font-size 2.2em
  h3
    font-size 1.8em
  h4
    font-size 1.5em
  h5
    font-size 1.2em
  h6
    font-size 1em
  blockquote
    background-color lighten(main-color, 15%)
    padding 6px 12px
    margin 5px 0
    font-size 14px
    border-left 10px solid lighten(main-color, 25%)
  code
    color #D7BA7D
    padding 3px 5px 5px
    background-image linear-gradient(80deg, lighten(main-color, 35%), lighten(main-color, 25%))
    border-radius 5px
    margin 0 .2em
  code.hljs
    color #ebdbb2
    display block
    overflow-x auto
    padding 0.5em
    background-color #282828
  pre
    line-height 1.8
    font-size 18px
    position relative
    .code-lang
      position absolute
      color #0ed2f7
      text-transform uppercase
      left 2em
      top 1em
      z-index 100
      padding 2px 5px
      border-radius 3px
      background-color main-color
      font-size 14px
  .CodeMirror
    border-radius 10px
    font-family inherit
    height auto
    .CodeMirror-scroll
      height auto
      padding 55px 30px 60px 10px
      /* overflow-y hidden
      overflow-x auto */
    .CodeMirror-gutters
      padding 0 10px 0 20px
      background-color main-color!important
  a
    color #d7ba7d
  dl,
  ol,
  ul
    margin 12px 0;
    padding: .5em 1em .5em 2em;
    line-height: 1.5;
  li,
  dd
    padding: .5em 0;
  img
    max-width 100%
    border-radius 5px
    display inline-block
    margin .5em 0
  strong,
  dfn
    font-weight: 700;
  em,
  dfn
    font-style: italic;
    font-weight: 400;
  del
    text-decoration: line-through;
  table
    width 100%
    border 0
    margin 20px 0 50px 0
    border-collapse collapse
    border-spacing 0
    line-height 35px
    border 1px solid lighten(main-color, 25%)
    th
      background-color lighten(main-color, 25%)
      font-weight 700
      font-size 18px
      text-align left
      line-height 35px
      color #FFF
      font-size 16px
    td,
    th
      padding 5px 20px 5px 20px
      font-size 14px
      border 1px solid lighten(main-color, 25%)
.article-main
  padding .5em 2em
  .article-box
    position relative
  .article-tags
    position absolute
    z-index 2
    right 0
    top 0
    text-align right
    color darken(font-color, 70%)
    transition(all .3s linear)
    &:hover
      color darken(font-color, 50%)

