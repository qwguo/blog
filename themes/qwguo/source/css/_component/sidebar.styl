    font-size 16px
    margin 0
    border-bottom 1px solid lighten(main-color, 10%)
    padding 10px 5px
    .iconfont
      margin-right .5em
      font-weight 400
      color darken(font-color, 10%)
      font-size 20px
    .widget-title-name
      color darken(font-color, 30%)
  .widget
    padding 20px 0
    border-top 1px solid lighten(main-color, 20%)

