// 转圈效果动画
@keyframes surround{
  from, to {
		width: 10px;
		height: 100%;
		top: 0;
		left: 0;
	}
	25% {
		width: 100%;
		height: 10px;
		top: calc(100% - 10px);
		left: 0;
	}
	50% {
		width: 10px;
		height: 100%;
		top: 0;
		left: calc(100% - 10px);
	}
	75% {
		width: 100%;
		height: 10px;
		top: 0%;
		left: 0%;
	}
}
.anim-surround
  &::after,
  &::before
    content ''
    position absolute
    z-index 1
    boxShadow(0 0 20px 0 rgba(255, 255, 255, .3))
    animation-duration 4s
    animation-timing-function linear
    animation-iteration-count infinite
    animation-name surround
  &::after
      animation-delay -2s

// 外光晕效果
@keyframes haloEffectOut{
  from, to{
    boxShadow(0 0 3px 0 rgba(255, 255, 255, .3))
  }
  50%{
    boxShadow(0 0 50px 0 rgba(255, 255, 255, .3))
  }
}
.anim-halo-effect-out
  &::before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    z-index 1
    animation-duration 2s
    animation-timing-function linear
    animation-iteration-count infinite
    animation-name haloEffectOut

// 内光晕效果
@keyframes haloEffectIn{
  from, to{
    boxShadow(0 0 3px 0 rgba(255, 255, 255, .3) inset)
  }
  50%{
    boxShadow(0 0 50px 0 rgba(255, 255, 255, .3) inset)
  }
}
.anim-halo-effect-in
  &::before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    margin auto
    z-index 1
    animation-duration 2s
    animation-timing-function linear
    animation-iteration-count infinite
    animation-name haloEffectIn
  > div
    background-color transparent!important
/* swipe */
[class*="anim-swipe-"]
  &::before
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color lighten(main-color, 12%)
    animation-duration .4s
    animation-timing-function ease-in
    // animation-iteration-count infinite
    animation-fill-mode forwards
  > div
    background-color transparent!important

// 左swipe
@keyframes swipeLeft{
  0%{
    left 100%
  }
  100%{
    left 0%
  }
}
.anim-swipe-left
  &::before
    animation-name swipeLeft
// 右swipe
@keyframes swipeRight{
  0%{
    right 100%
  }
  100%{
    right 0%
  }
}
.anim-swipe-right
  &::before
    animation-name swipeRight
// 下swipe
@keyframes swipeDown{
  0%{
    bottom 100%
  }
  100%{
    bottom 0%
  }
}
.anim-swipe-down
  &::before
    animation-name swipeDown
// 上swipe
@keyframes swipeUp{
  0%{
    top 100%
  }
  100%{
    top 0%
  }
}
.anim-swipe-up
  &::before
    animation-name swipeUp
