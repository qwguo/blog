.author-box
  text-align center
  .portrait
    width 120px
    height 120px
    overflow hidden
    margin 10px auto
    img
      radius(50%)
      max-width 100%
      max-height 100%
  ul,li
    padding 0
    margin 0
    list-style none
  li
    margin-top 20px
  .author-name
    font-size 20px
    color darken(font-color, 20%)
  .author-intro
    font-size 12px
    color darken(font-color, 50%)
  .author-icon
    letter-spacing -.3em;
    display flex
    flex-wrap wrap
    justify-content flex-start
    a
      flex-grow 0
      flex-shrink 0
      letter-spacing normal
      width 30px
      height 30px
      margin 0 11px 10px 0
      background-color lighten(main-color, 25%)
      radius(15px)
      line-height 30px
      cursor pointer
      color darken(font-color, 25%)
      font-size 16px
      position relative
      &::before
        position relative
        z-index 2
      &::after
        content ''
        width 100%
        height 100%
        position absolute
        radius(50%)
        left 0
        top 0
        z-index 1
        transition(all .3s linear)
        transform scale(0)
      &:hover
        color font-color
        &::after
          transform scale(1)
      &.icon-weixin
        &::after
          background-color #00BC0D
      &.icon-QQ
        &::after
          background-color #27BDF6
      &.icon-weibo
        &::after
          background-color #F8231F
      &.icon-douban
        &::after
          background-color #2E963D
      &.icon-zhihu
        &::after
          background-color #0073DD
      &.icon-email
        &::after
          background-color #0073DD
      &.icon-twitter
        &::after
          background-color #41ABE1
      &.icon-facebook
        &::after
          background-color #3B5997
      &.icon-github
        &::after
          background-color #fff
        &:hover
          color #000
      &.icon-linkedin
        &::after
          background-color #0073B0
      &.icon-stack-overflow
        &::after
          background-color #F48024

