.archive-widget
  .archive-list
    margin 0
    padding 0
    .archive-list-item
      list-style none
      display inline-block
      position relative
      z-index 1
      width 50%
      font-size 12px
      border-width 1px 1px 0 0
      border-style solid
      border-color lighten(main-color, 25%)
      text-align center
      transition(all .5s ease .1s)
      &:first-child
        border-width 0 1px 1px 0
        margin-bottom -1px
        + li
          border-width 0 0 1px 0
          margin-bottom -1px
      &:nth-child(2n)
        border-width 1px 0 0 0
      &::after,&::before
        content ''
        position absolute
        width 0
        height 0
        border-color lighten(main-color, 50%)
        border-style solid
        opacity 0
      &::before
        transition-property height, width, opacity
        transition-duration .1s, .1s, 0s
        transition-timing-function linear
        transition-delay .2s, .3s, .4s
        border-width 1px 1px 0 0
        left -1px
        top -1px
      &::after
        transition-property height, width, opacity
        transition-duration .1s, .1s, .0s
        transition-timing-function linear
        transition-delay 0s, .1s, .2s
        border-width 0 0 1px 1px
        bottom 0
        right 0
      .archive-list-link
        display inline-block
        width 100%
        height 30px
        line-height 30px
        position relative
        z-index 2
      &:hover
        background-color lighten(main-color, 10%)
        z-index 2
        boxShadow(0 0 0 4px rgba(255, 255, 255, .2)) 
      &:hover::before
        transition-property width, height
        transition-duration .1s, .1s
        transition-timing-function linear
        transition-delay 0s, .1s
        opacity 1
        width 100%
        height 100%
      &:hover::after
        transition-property width, height, opacity
        transition-duration .1s, .1s, .0s
        transition-timing-function linear
        transition-delay .2s, .3s, .2s
        opacity 1
        width 100%
        height 100%
