<% if (site.tags.length){ %>
  <div class="widget-wrap tags-cloud-widget">
    <h3 class="widget-title">
      <i class="iconfont icon-tags"></i>
      <a class="widget-title-name" href="<%- url_for(theme.menus.tags) %>"><%= __('tagcloud') %></a>
    </h3>
    <div class="widget">
      <%- tagcloud({min_font:10, max_font: 50, order: -1, start_color: '#fff', end_color: '#000'}) %>

    </div>
  </div>
<% } %>
