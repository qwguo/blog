<div class="author-box">
  <% var author = theme.author; %>
  <div class="portrait"><img src="<%- author.portrait %>" alt=""></div>
  <ul>
    <li class="author-name"><%- author.name; %></li>
    <li class="author-intro"><%- author.intro; %></li>
    <li class="author-icon">
      <% if(author.weixin){ %>
        <a href="javascript:weixin();" title="weixin" class="iconfont icon-weixin"></a>
      <% } %>
      <% if(author.QQ){ %>
        <a target="_blank" href="<%- author.QQ%>" title="QQ" class="iconfont icon-QQ"></a>
      <% } %>
      <% if(author.weibo){ %>
        <a target="_blank" href="<%- author.weibo%>" title="weibo" class="iconfont icon-weibo"></a>
      <% } %>
      <% if(author.douban){ %>
        <a target="_blank" href="<%- author.douban%>" title="douban" class="iconfont icon-douban"></a>
      <% } %>
      <% if(author.zhihu){ %>
        <a target="_blank" href="<%- author.zhihu%>" title="zhihu" class="iconfont icon-zhihu"></a>
      <% } %>
      <% if(author.email){ %>
        <a href="mailto:<%- author.email%>" title="<%- author.email%>" class="iconfont icon-email"></a>
      <% } %>
      <% if(author.twitter){ %>
        <a target="_blank" href="<%- author.twitter%>" title="twitter" class="iconfont icon-twitter"></a>
      <% } %>
      <% if(author.github){ %>
        <a target="_blank" href="<%- author.github%>" title="github" class="iconfont icon-github"></a>
      <% } %>
      <% if(author.facebook){ %>
        <a target="_blank" href="<%- author.facebook%>" title="facebook" class="iconfont icon-facebook"></a>
      <% } %>
      <% if(author.linkedin){ %>
        <a target="_blank" href="<%- author.linkedin%>" title="linkedin" class="iconfont icon-linkedin"></a>
      <% } %>
      <% if(author.stackoverflow){ %>
        <a target="_blank" href="<%- author.stackoverflow%>" title="stack overflow" class="iconfont icon-stack-overflow"></a>
      <% } %>
    </li>
  </ul>
</div>
