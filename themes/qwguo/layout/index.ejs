<div class="index-main" id="indexMain">
  <% var a = false; %>
  <% site.posts.forEach(function(post, index){
    let tags = null;
    if(post.tags.length){
      tags = [];
      post.tags.forEach((tag, i)=>{
        tags.push(tag.name);
      });
    }
    if(index===3){ console.log(post);}
  %>
    <div class="post-item">
      <div class="item-inner">
        <h2 class="title"><a href="<%- post.path %>"><%- post.title %></a></h2>
        <div class="cover"><img src="<%- post.cover %>" /></div>
        <div class="article-box excerpt"><%- post.excerpt %></div>
        <% if(tags !== null){ %>
          <div class="tag-box">
            <% tags.sort().forEach((tag)=>{ %>
              <span class="tag-item"><a href=""><%- tag %></a></span>
            <% }) %>
          </div>
          <span class="tag-class"><%- tags.sort()[0] %></span>
        <% } %>
      </div>
    </div>
<% }); %>
</div>
